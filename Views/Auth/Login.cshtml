@{
    ViewData["Title"] = "Giriş Yap";
}
<h2>Giriş Yap</h2>

<form asp-action="Login" method="post" class="mt-4">
    <input type="email" name="email" placeholder="E-posta" required class="form-control mb-2" />
    <input type="password" name="password" placeholder="Şifre" required class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">Giriş</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<p class="mt-3">
    Hesabınız yok mu? <a asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
</p>
