@model List<AIBlog.ViewModels.PostListViewModel>

@{
    ViewData["Title"] = "Bloglar";
}

<h2 class="mb-4">üìö T√ºm Bloglar</h2>

@if (ViewBag.CurrentTag != null)
{
    <div class="alert alert-info d-flex justify-content-between align-items-center">
        <span>Etikete g√∂re filtreleniyor: <strong>#@ViewBag.CurrentTag</strong></span>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Filtreyi Kaldƒ±r</a>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning">Hen√ºz blog payla≈üƒ±lmamƒ±≈ü.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var post in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrEmpty(post.Image))
                    {
                        <img src="@post.Image" class="card-img-top rounded-top" style="height: 200px; object-fit: cover;" alt="@post.Title" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@post.Title</h5>
                        <p class="card-text text-muted" style="min-height: 60px;">@post.Description</p>

                        <p class="text-muted small mb-2">
                            üìÅ <strong>@post.CategoryName</strong><br />
                            ‚úçÔ∏è <strong>@post.AuthorName</strong><br />
                            üóìÔ∏è @post.PublishedOn.ToShortDateString()
                        </p>

                        @if (post.Tags != null && post.Tags.Any())
                        {
                            <div class="mb-2">
                                @foreach (var tag in post.Tags)
                                {
                                    var tagText = tag;
                                    var tagColor = "secondary";

                                    if (tag.Contains(":"))
                                    {
                                        var parts = tag.Split(':');
                                        tagText = parts[0];
                                        tagColor = parts[1];
                                    }

                                    <a asp-action="Index" asp-route-tag="@tagText" class="badge bg-@tagColor me-1 text-decoration-none">
                                        #@tagText
                                    </a>
                                }
                            </div>
                        }

                        <a asp-controller="Blog" asp-action="Details" asp-route-url="@post.Url" class="btn btn-sm btn-outline-primary mt-auto w-100">
                            üîç Detaylarƒ± G√∂r
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
